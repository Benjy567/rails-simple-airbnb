<h1 class="ms-5 mt-2">All our Flats (<%= @flats.count %>) </h1>
<div class="d-flex m-5">
<% @flats.each do |flat| %>
    <div class="card me-3 shadow-sm " style="width: 18rem;">
      <div class="card-body bg-light">
        <h5 class="card-title"><%= flat.name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
        <p class="card-text"><i class="fa-solid fa-user-group"></i><%= flat.number_of_guests %>  <i class="fa-sharp fa-solid fa-euro-sign"></i> <%= flat.price_per_night %></p>
      </div>
        <a href="#" class="card-link border-top p-1">More info</a>
    </div>
<% end %>
</div>
